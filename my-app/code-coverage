pipeline {
    agent any


tools {
    jdk 'java'
    maven 'Maven'
}
         


    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('git'){
            steps {
                git branch: 'main', url: 'https://github.com/devopsclouds/java-jar.git'
            }
        }
        
        stage('maven'){
            steps {
                sh 'mvn -f my-app/pom.xml clean org.jacoco:jacoco-maven-plugin:prepare-agent install'
            }
        }
        
         stage('sonarqubeanaylsis'){
            
            
            steps {
            withSonarQubeEnv('sonarqube-token') {
            
                sh 'mvn -f my-app/pom.xml sonar:sonar -Dsonar.projectKey=sonar123'
            
            }
            }
        }
        stage("Quality Gate") {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    // Parameter indicates whether to set pipeline to UNSTABLE if Quality Gate fails
                    // true = set pipeline to UNSTABLE, false = don't
                    waitForQualityGate abortPipeline: true
                }
            }
        }
        
    }
}
